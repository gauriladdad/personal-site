---
import "../styles/globals.css";

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title ? `${title} | Kids News` : "Kids News"}</title>
    <meta name="description" content="A calm, friendly news site designed for kids aged 6-9. Simplified summaries of world news, science, and technology." />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title ? `${title} | Kids News` : "Kids News"} />
    <meta property="og:description" content="A calm, friendly news site designed for kids aged 6-9." />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title ? `${title} | Kids News` : "Kids News"} />
    <meta property="twitter:description" content="A calm, friendly news site designed for kids aged 6-9." />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-0MX71GSRH5"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-0MX71GSRH5');
    </script>
  </head>
  <body>
    <div class="app-wrapper">
      <slot />
    </div>
  </body>
</html>
